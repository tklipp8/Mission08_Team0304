@model List<Mission08_Team0304.Models.Task>

@{
    ViewData["Title"] = "Index View";
    Layout = "_Layout";
}

<h2>Task Manager</h2>

<div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
    @for (int q = 1; q <= 4; q++)
    {
        var tasks = Model.Where(t => t.Quadrant == q && t.Completed == false).ToList();
        <div>
            <h3>Quadrant @q</h3>
            <ul>
                @foreach (var task in tasks)
                {
                    <li>
                        @task.TaskName (@task.CategoryName?.CategoryName)
                        <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-danger btn-sm">Delete</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>